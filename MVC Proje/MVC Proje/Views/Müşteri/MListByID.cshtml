@using MVC_Proje.Models;
@model MUSTERITABLOSU
@{
    ViewBag.Title = "MListByID";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@using (Html.BeginForm("MüşteriGüncelle", "Müşteri", FormMethod.Post))
{

    <div>
        <h3 class="page-header">Müşteri ID</h3>
        @Html.TextBoxFor(k => k.MUSTERIID, new { @class = "form-control" })
    </div>
    <div>
        <h3 class="page-header">Müşteri Adı</h3>
        @Html.TextBoxFor(k => k.MUSTERIAD, new { @class = "form-control" })
    </div>
    <div>&nbsp;</div>

    <div>
        <h3 class="page-header">Müşteri Soyadı</h3>
        @Html.TextBoxFor(k => k.MUSTERISOYAD, new { @class = "form-control" })
    </div>
    <div>&nbsp;</div>
    <div>
        <input type="submit" vale="Güncelle" class="btn btn-danger" />
    </div>
}


