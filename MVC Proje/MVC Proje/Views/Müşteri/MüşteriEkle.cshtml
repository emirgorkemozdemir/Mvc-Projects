@using MVC_Proje;
@model MVC_Proje.Models.MUSTERITABLOSU
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>Müşteri Ekle</h2>

<form method="post">
    <div>
        <h3>Müşteri Adı</h3>
        @Html.TextBoxFor(k => k.MUSTERIAD, new { @class = "form-control" })
    </div>
    <div>&nbsp;</div>
    <div>
        <h3>Müşteri Soyadı</h3>
        @Html.TextBoxFor(k => k.MUSTERISOYAD, new { @class = "form-control" })
    </div>
    <div>&nbsp;</div>
    <div>
        <input type="submit" class="btn btn-warning" value="Ekle" />
    </div>
</form>

