@using Yemek_Sitesi_MVC.Models
@model YöneticiTablosu
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/NonUserLayout.cshtml";
}




@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{
<div style="display:flex;flex-direction:column; align-items:center; justify-content:space-between;height:500px">
    @Html.AntiForgeryToken()

    <h2>Sign Up</h2>

    @Html.TextBoxFor(m => m.KullanıcıAdı)
    @Html.ValidationMessageFor(m => m.KullanıcıAdı)

    @Html.PasswordFor(m => m.Şifre)
    @Html.ValidationMessageFor(m => m.Şifre)

    <input type="submit" class="btn btn-danger" value="Sign Up" />

</div>
        }

  

