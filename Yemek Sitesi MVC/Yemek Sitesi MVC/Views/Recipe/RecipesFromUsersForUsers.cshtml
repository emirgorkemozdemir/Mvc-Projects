@using Yemek_Sitesi_MVC.Models
@model List<TarifVermeTablosu>
@{
    ViewBag.Title = "RecipesFromUsersForUsers";
    Layout = "~/Views/Shared/LoggedUserLayout.cshtml";
}

@foreach (var recipe in Model)
{
    <div style="display:flex;flex-direction:column;align-items:center">
        <h1>@recipe.Ad</h1>
        <img height="400" width="1000" src="@recipe.TarifResim" />
        <h2>@recipe.TarifKişi</h2>
        <h2>@recipe.TarifKişiMail</h2>
        <h3>@recipe.Malzeme</h3>
        <h3>@recipe.TarifYapılış</h3>

    </div>



}

