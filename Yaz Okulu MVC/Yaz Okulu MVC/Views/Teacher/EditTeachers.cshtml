@using Yaz_Okulu_MVC.Models;
@model ÖğretmenTablosu
@{
    ViewBag.Title = "EditTeachers";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@using (Html.BeginForm("EditTeachers", "Teacher", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.OgrtID)
    @Html.TextBoxFor(m => m.OgrtAdSoyad)
    @Html.DropDownListFor(m => m.OgrtDersID, (List<SelectListItem>)ViewBag.lessons)

   

    <input type="submit" value="Düzenle" class="btn btn-danger" />
}
