@using Yemek_Sitesi_MVC.Models
@model YemekTablosu
@{
    ViewBag.Title = "AdminEditRecipe";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("AdminEditRecipe", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.YemekID)
    @Html.TextBoxFor(m => m.YemekAd, new { @placeholder = "Enter the name of recipe" })
    @Html.DropDownListFor(m => m.KategoriID, new SelectList(ViewBag.clist, "KategoriID", "Ad"))
    @Html.TextAreaFor(m => m.Malzemeler, new { @placeholder = "Enter the ingredients of recipe" })
    @Html.TextAreaFor(m => m.Tarifler, new { @placeholder = "Enter how to make this recipe" })
    @Html.TextBoxFor(m => m.Resimler, new { @placeholder = "Enter the photo link of this recipe" })
    <input type="submit" class="btn btn-danger" value="Edit the recipe" />
}


